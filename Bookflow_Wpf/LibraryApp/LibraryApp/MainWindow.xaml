<Window x:Class="LibraryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bookflow Adminisztrátori felület" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">

    <!-- Világos szürke → sötétszürke átmenetes háttér -->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#D3D3D3" Offset="0"/>
            <GradientStop Color="#2F2F2F" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Menü -->
            <RowDefinition Height="Auto"/>
            <!-- Cím -->
            <RowDefinition Height="Auto"/>
            <!-- Kereső -->
            <RowDefinition Height="*"/>
            <!-- Lista -->
            <RowDefinition Height="Auto"/>
            <!-- Gombok -->
        </Grid.RowDefinitions>

        <!-- Navigációs menü -->
        <Menu Grid.Row="0" Background="#444" Foreground="White" Margin="-20,-20,-21,20">
            <MenuItem Name="addbookwindow" Header="Új könyv felvétele" Click="addbookwindow_Click"/>
            <MenuItem Name="rentedbookwindow" Header="Bérelt könyvek" Click="rentedbookwindow_Click"/>
        </Menu>

        <!-- Cím -->
        <TextBlock Grid.Row="1" Text="Bookflow Adminisztrátori felület"
                   FontSize="24" FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 20"/>

        <!-- Keresőmező -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 0 0 10">
            <Label Content="Keresés:" 
                   VerticalAlignment="Center" 
                   FontWeight="Bold" 
                   Foreground="White"
                   Margin="0 0 10 0"/>
            <TextBox Width="300" Height="28" 
                     VerticalAlignment="Center"
                     Padding="5"
                     BorderBrush="#CCCCCC"
                     BorderThickness="1"
                     Background="White"/>
        </StackPanel>

        <!-- Könyvek listája -->
        <DataGrid Grid.Row="3"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Margin="0 0 0 10"
                  Background="White"
                  BorderBrush="#DDDDDD"
                  BorderThickness="1"
                  RowHeaderWidth="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Cím" Binding="{Binding Cim}" Width="*"/>
                <DataGridTextColumn Header="Szerző" Binding="{Binding Szerzo}" Width="200"/>
                <DataGridTextColumn Header="Év" Binding="{Binding Ev}" Width="80"/>
                <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Műveleti gombok -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Hozzáadás" Width="100" Height="32" Foreground="White" Margin="0 0 10 0">
                <Button.Background>
                    <SolidColorBrush Color="#4CAF50"/>
                </Button.Background>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="Szerkesztés" Width="100" Height="32" Foreground="White" Margin="0 0 10 0">
                <Button.Background>
                    <SolidColorBrush Color="#2196F3"/>
                </Button.Background>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="Törlés" Width="100" Height="32" Foreground="White">
                <Button.Background>
                    <SolidColorBrush Color="#F44336"/>
                </Button.Background>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>
