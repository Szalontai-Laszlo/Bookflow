<Window x:Class="LibraryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bookflow Adminisztrátori felület" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">

    <!-- Világos szürke → sötétszürke átmenetes háttér -->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#D3D3D3" Offset="0"/>
            <GradientStop Color="#2F2F2F" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Menü -->
            <RowDefinition Height="Auto"/>
            <!-- Cím -->
            <RowDefinition Height="Auto"/>
            <!-- Kereső -->
            <RowDefinition Height="*"/>
            <!-- Lista -->
            <RowDefinition Height="Auto"/>
            <!-- Gombok -->
        </Grid.RowDefinitions>

        <!-- Navigációs menü -->
        <Menu Grid.Row="0" Background="#444" Foreground="White" Margin="-20,-20,-21,20">
            <MenuItem Name="addbookwindow" Header="Új könyv felvétele" Click="addbookwindow_Click"/>
            <MenuItem Name="rentedbookwindow" Header="Bérelt könyvek" Click="rentedbookwindow_Click"/>
        </Menu>

        <!-- Cím -->
        <TextBlock Grid.Row="1" Text="Bookflow Adminisztrátori felület"
                   FontSize="24" FontWeight="Bold"
                   Foreground="Black"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 20"/>

        <!-- Keresőmező -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 0 0 10">
            <Label Content="Keresés:" 
                   VerticalAlignment="Center" 
                   FontWeight="Bold" 
                   Foreground="Black"
                   Margin="0 0 10 0"/>
            <TextBox Width="300" Height="28" 
                     VerticalAlignment="Center"
                     Padding="5"
                     BorderBrush="#CCCCCC"
                     BorderThickness="1"
                     Background="White"/>
        </StackPanel>

        <!-- Könyvek listája -->
        <DataGrid Name="dataGrid_osszeskonyv"
                  HorizontalAlignment="Center" 
                  Height="384" 
                  Grid.Row="3" 
                  VerticalAlignment="Center" 
                  Width="740"></DataGrid>

        <!-- Műveleti gombok -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">

            <Button Content="Szerkesztés" Width="104" Height="32" Foreground="White" Margin="0 0 540 0">
                <Button.Background>
                    <SolidColorBrush Color="#2196F3"/>
                </Button.Background>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="Törlés" Width="105" Height="32" Foreground="White">
                <Button.Background>
                    <SolidColorBrush Color="#F44336"/>
                </Button.Background>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>
