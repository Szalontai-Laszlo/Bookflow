<Window x:Class="LibraryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bookflow Adminisztrátori felület" Height="600" Width="800"
        WindowStartupLocation="CenterScreen" WindowStyle="None">

    <!-- Világos szürke → sötétszürke átmenetes háttér -->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#D3D3D3" Offset="0"/>
            <GradientStop Color="#2F2F2F" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="345*"/>
            <ColumnDefinition Width="36*"/>
            <ColumnDefinition Width="380*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Background="#444" Foreground="White" Margin="-20,-21,-20,0" Height="21" VerticalAlignment="Top" Grid.ColumnSpan="3">
            <MenuItem Name="addbookwindow" Header="Új könyv felvétele" Click="addbookwindow_Click"/>
        </Menu>

        <TextBlock Grid.Row="1" Text="Bookflow Adminisztrátori felület"
                   FontSize="24" FontWeight="Bold"
                   Foreground="Black"
                   HorizontalAlignment="Left"
                   Margin="195,0,0,20" Grid.ColumnSpan="3"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 0 0 10" Grid.ColumnSpan="3">
            <Label Content="Keresés:" 
                   VerticalAlignment="Center" 
                   FontWeight="Bold" 
                   Foreground="Black"
                   Margin="0 0 10 0"/>
            <TextBox Width="300" Height="28" 
                     VerticalAlignment="Center"
                     Padding="5"
                     BorderBrush="#CCCCCC"
                     BorderThickness="1"
                     Background="White"
                     TextChanged="TextBox_Search"/>
        </StackPanel>

        <DataGrid Name="dataGrid_osszeskonyv"
                  HorizontalAlignment="Left" 
                  Height="384" 
                  Grid.Row="3" 
                  VerticalAlignment="Top" 
                  MouseDoubleClick="dataGrid_osszeskonyv_MouseDoubleClick"
                  IsReadOnly="True"
                  Width="740" Grid.ColumnSpan="3" Margin="10,0,0,0"></DataGrid>

        <Button Name="button_torles" Content="Törlés" Foreground="White" Background="#F44336" Margin="240,406,240,10" Grid.Row="3" Grid.ColumnSpan="3" Click="button_torles_Click">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border CornerRadius="8" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Name="button_Kilepes" Content="X" Width="34" Height="28"
        HorizontalAlignment="Right" VerticalAlignment="Top" Click="button_Kilepes_Click"
        Margin="0,8,0,0" Foreground="White" FontWeight="Bold" Grid.RowSpan="2" Grid.Column="2">
            <Button.Background>
                <SolidColorBrush Color="#F44336"/>
            </Button.Background>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="4" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBlock Name="textBlock_ido"  
                   HorizontalAlignment="Left"
                   Height="30" 
                   Margin="201,50,0,0" 
                   Grid.RowSpan="2" 
                   Grid.Row="1" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Top" 
                   Width="152" Grid.Column="2"/>

    </Grid>
</Window>
