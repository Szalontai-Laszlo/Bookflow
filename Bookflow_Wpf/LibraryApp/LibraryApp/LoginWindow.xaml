<Window x:Class="LibraryApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryApp"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#D3D3D3" Offset="0"/>
            <GradientStop Color="#2F2F2F" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <TextBlock Text="Üdvözöljük a Bookflow Adminisztrátori felületén!"
                   FontSize="24" FontWeight="Bold"
                   Foreground="Black"
                   HorizontalAlignment="Left"
                   Margin="124,10,0,357" Width="629"/>

        <TextBlock Text="Kérlek jelentkezz be!"
                   FontSize="18" FontWeight="Bold"
                   Foreground="Black"
                   HorizontalAlignment="Center"
                   Margin="0,104,0,285" Width="184"/>

        <TextBox HorizontalAlignment="Center" Height="32" Margin="0,154,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="363"/>
        <TextBox HorizontalAlignment="Center" Height="32" Margin="0,217,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="364"/>
        <Button Content="Bejelentkezés" Height="32" Foreground="White" Margin="158,250,178,58">
            <Button.Background>
                <SolidColorBrush Color="#4CAF50"/>
            </Button.Background>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="8" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Label Content="Felhasználónév:" HorizontalAlignment="Left" Height="32" Margin="108,154,0,0" VerticalAlignment="Top" Width="106"/>
        <Label Content="Jelszó:" HorizontalAlignment="Left" Height="32" Margin="135,217,0,0" VerticalAlignment="Top" Width="106"/>
    </Grid>
</Window>
