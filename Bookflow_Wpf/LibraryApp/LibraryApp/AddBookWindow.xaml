<Window x:Class="LibraryApp.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Új könyv felvétele" Height="340" Width="420"
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#D3D3D3" Offset="0"/>
            <GradientStop Color="#2F2F2F" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Background="#444" Foreground="White" Margin="-20,-20,-20,17">
            <MenuItem Name="fooldal" Header="Főoldal" Click="fooldal_Click"/>
            <MenuItem Name="rentedbookwindow" Header="Bérelt könyvek" Click="rentedbookwindow_Click"/>
        </Menu>

        <TextBlock Text="Új könyv felvétele"
                   FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0 12 0 8"
                   Grid.Row="1"/>

        <Grid Grid.Row="2" Margin="0,6,0,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Cím:" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,8"/>
            <TextBox x:Name="textBox_konyvcim" Grid.Row="0" Grid.Column="1" MinWidth="220" Padding="6" Margin="0,0,0,8" BorderBrush="#CCCCCC" BorderThickness="1"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Szerző:" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,8"/>
            <TextBox x:Name="textBox_szerzo" Grid.Row="1" Grid.Column="1" MinWidth="220" Padding="6" Margin="0,0,0,8" BorderBrush="#CCCCCC" BorderThickness="1"/>

            <Label Grid.Row="2" Grid.Column="0" Content="Kategória:" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,12,0"/>
            <ComboBox x:Name="comboBox_kategoria" Grid.Row="2" Grid.Column="1" MinWidth="220" Padding="4" Margin="0" BorderBrush="#CCCCCC" BorderThickness="1"/>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Mentés" Width="100" Height="32" Foreground="White" Margin="0 0 10 0">
                <Button.Background>
                    <SolidColorBrush Color="#4CAF50"/>
                </Button.Background>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="Mégse" Width="100" Height="32" Foreground="White">
                <Button.Background>
                    <SolidColorBrush Color="#F44336"/>
                </Button.Background>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>