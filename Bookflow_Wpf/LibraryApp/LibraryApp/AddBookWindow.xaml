<Window x:Class="LibraryApp.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Új könyv felvétele" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Menü -->
            <RowDefinition Height="Auto"/>
            <!-- Cím -->
            <RowDefinition Height="*"/>
            <!-- Űrlap -->
            <RowDefinition Height="Auto"/>
            <!-- Gombok -->
        </Grid.RowDefinitions>

        <!-- Navigációs menü -->
        <Menu Grid.Row="0" Background="#444" Foreground="White" Margin="-20,-18,-20,47">
            <MenuItem Name="fooldal" Header="Főoldal" Click="fooldal_Click"/>
            <MenuItem Name="addbookwindow" Header="Bérelt könyvek" Click="addbookwindow_Click"/>
        </Menu>


        <!-- Cím -->
        <TextBlock Text="Új könyv felvétele"
                   FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 20"
                   Grid.Row="0"/>

        <!-- Könyv címe -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 0 0 10">
            <Label Content="Cím:" Width="80" VerticalAlignment="Center"/>
            <TextBox Width="250" Height="28" Padding="5"
                     BorderBrush="#CCCCCC" BorderThickness="1"/>
        </StackPanel>

        <!-- Könyv szerzője -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 0 0 10">
            <Label Content="Szerző:" Width="80" VerticalAlignment="Center"/>
            <TextBox Width="250" Height="28" Padding="5"
                     BorderBrush="#CCCCCC" BorderThickness="1"/>
        </StackPanel>

        <!-- Műveleti gombok -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Mentés" Width="100" Height="32" Foreground="White" Margin="0 0 10 0">
                <Button.Background>
                    <SolidColorBrush Color="#4CAF50"/>
                </Button.Background>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="Mégse" Width="100" Height="32" Foreground="White">
                <Button.Background>
                    <SolidColorBrush Color="#F44336"/>
                </Button.Background>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
        <Menu Grid.Row="0" Background="#444" Foreground="White" Margin="-20,-19,-20,48">
            <MenuItem x:Name="fooldal1" Header="Főoldal" Click="fooldal_Click"/>
            <MenuItem x:Name="addbookwindow1" Header="Bérelt könyvek" Click="addbookwindow_Click"/>
        </Menu>
        <Menu Grid.Row="0" Background="#444" Foreground="White" Margin="-20,-20,-20,49">
            <MenuItem x:Name="fooldal2" Header="Főoldal" Click="fooldal_Click"/>
            <MenuItem x:Name="addbookwindow2" Header="Bérelt könyvek" Click="addbookwindow_Click"/>
        </Menu>
    </Grid>
</Window>
