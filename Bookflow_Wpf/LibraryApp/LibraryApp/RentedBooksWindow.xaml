<Window x:Class="LibraryApp.RentedBooksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bérelt könyvek" Height="400" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Cím -->
            <RowDefinition Height="*"/>
            <!-- Lista -->
            <RowDefinition Height="Auto"/>
            <!-- Gombok -->
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Background="#444" Foreground="White" Margin="-20,-19,-20,49">
            <MenuItem Name ="fooldal" Header="Főoldal" Click="fooldal_Click"/>
            <MenuItem Name="addbookwindow" Header="Új könyv felvétele" Click="addbookwindow_Click"/>
        </Menu>

        <!-- Cím -->
        <TextBlock Grid.Row="0" Text="Bérelt könyvek"
                   FontSize="22" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 20"/>

        <!-- Lista a bérelt könyvekről -->
        <DataGrid Name="dataGrid_bereltkonyvek"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Background="White"
                  BorderBrush="#DDDDDD"
                  BorderThickness="1"
                  RowHeaderWidth="0"
                  Margin="0 0 0 10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Bérlő neve" Binding="{Binding BerloNev}" Width="200"/>
                <DataGridTextColumn Header="Könyv címe" Binding="{Binding KonyvCim}" Width="*"/>
                <DataGridTextColumn Header="Kezdő dátum" Binding="{Binding DatumKezdet}" Width="150"/>
                <DataGridTextColumn Header="Vég dátum" Binding="{Binding DatumVege}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Műveleti gombok -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Új bérlés" Width="100" Height="32" Foreground="White" Margin="0 0 10 0">
                <Button.Background>
                    <SolidColorBrush Color="#4CAF50"/>
                </Button.Background>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="Törlés" Width="100" Height="32" Foreground="White">
                <Button.Background>
                    <SolidColorBrush Color="#F44336"/>
                </Button.Background>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
        <Menu Grid.Row="0" Background="#444" Foreground="White" Margin="-20,-20,-20,50">
            <MenuItem x:Name ="fooldal1" Header="Főoldal" Click="fooldal_Click"/>
            <MenuItem x:Name="addbookwindow1" Header="Új könyv felvétele" Click="addbookwindow_Click"/>
        </Menu>
    </Grid>
</Window>
