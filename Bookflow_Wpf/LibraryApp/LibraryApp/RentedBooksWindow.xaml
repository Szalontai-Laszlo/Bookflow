<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="LibraryApp.RentedBooksWindow"
        Title="Bérelt könyvek" Height="400" Width="700"
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#D3D3D3" Offset="0"/>
            <GradientStop Color="#2F2F2F" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Cím -->
            <RowDefinition Height="*"/>
            <!-- Lista -->
            <RowDefinition Height="Auto"/>
            <!-- Gombok -->
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Background="#444" Foreground="White" Margin="-20,-19,-20,49">
            <MenuItem x:Name ="fooldal" Header="Főoldal" Click="fooldal_Click"/>
            <MenuItem x:Name="addbookwindow" Header="Új könyv felvétele" Click="addbookwindow_Click"/>
        </Menu>

        <!-- Cím -->
        <TextBlock Grid.Row="0" Text="Bérelt könyvek"
                   FontSize="22" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0 0 0 20"/>
        <!-- Könyvek listája -->
        <DataGrid Name="dataGrid_bereltkonyvek" HorizontalAlignment="Center" Height="243" Grid.Row="1" VerticalAlignment="Center" Width="640"/>

        <!-- Műveleti gombok -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Szerkesztés" Width="104" Height="32" Foreground="White" Margin="0 0 450 0">
                <Button.Background>
                    <SolidColorBrush Color="#2196F3"/>
                </Button.Background>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="Törlés" Width="100" Height="32" Foreground="White" Background="#F44336">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
        <Menu Grid.Row="0" Background="#444" Foreground="White" Margin="-20,-20,-20,50">
            <MenuItem x:Name ="fooldal1" Header="Főoldal" Click="fooldal_Click"/>
            <MenuItem x:Name="addbookwindow1" Header="Új könyv felvétele" Click="addbookwindow_Click"/>
        </Menu>
        <TextBlock Name="textBlock_ido" HorizontalAlignment="Left" Height="24" Margin="511,15,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="139"/>
    </Grid>
</Window>
