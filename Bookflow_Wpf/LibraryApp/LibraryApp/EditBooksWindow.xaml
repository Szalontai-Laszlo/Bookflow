<Window x:Class="LibraryApp.EditBooksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryApp"
        mc:Ignorable="d"
        Title="EditBooksWindow" Height="450" Width="800" WindowStyle="None">
    <!-- Világos szürke → sötétszürke átmenetes háttér -->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#D3D3D3" Offset="0"/>
            <GradientStop Color="#2F2F2F" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <!-- Use explicit rows so footer (buttons) is always visible -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- header -->
            <RowDefinition Height="*"/>    <!-- body -->
            <RowDefinition Height="Auto"/> <!-- footer (buttons) -->
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Bookflow Szerkesztői felület"
                   FontSize="25" FontWeight="Bold"
                   Foreground="Black"
                   VerticalAlignment="Top"
                   Margin="208,28,218,0"
                   Height="43" />

        <!-- Body: labels and inputs -->
        <Grid Grid.Row="1" Margin="80,20,80,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Könyv Címe:" VerticalAlignment="Center" />
            <TextBox Grid.Row="0" Grid.Column="1" Name="txtTitle" Height="29" Margin="8,6,0,6" />

            <Label Grid.Row="1" Grid.Column="0" Content="Könyv Szerzője:" VerticalAlignment="Center" />
            <TextBox Grid.Row="1" Grid.Column="1" Name="txtAuthor" Height="29" Margin="8,6,0,6" />

            <Label Grid.Row="2" Grid.Column="0" Content="Kibérelhető-e:" VerticalAlignment="Center" />
            <ComboBox Grid.Row="2" Grid.Column="1" Name="comboBox_berles" Height="31" Margin="8,6,0,6" />

        </Grid>

        <!-- Footer: buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12,0,20" Panel.ZIndex="100">
            <Button Name="button_Save"
                    Content="Szerkesztés"
                    Width="200"
                    Height="36"
                    Margin="8,0"
                    Foreground="White"
                    Click="Button_Click">
                <Button.Background>
                    <SolidColorBrush Color="#2196F3"/>
                </Button.Background>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Name="button_Megse"
                    Content="Mégse"
                    Width="200"
                    Height="36"
                    Margin="8,0"
                    Foreground="White"
                    Click="button_Megse_Click">
                <Button.Background>
                    <SolidColorBrush Color="#9E9E9E"/>
                </Button.Background>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Window>
