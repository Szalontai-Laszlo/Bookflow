<Window x:Class="LibraryApp.EditBooksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryApp"
        mc:Ignorable="d"
        Title="EditBooksWindow" Height="450" Width="800">
    <!-- Világos szürke → sötétszürke átmenetes háttér -->
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#D3D3D3" Offset="0"/>
            <GradientStop Color="#2F2F2F" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <TextBlock Text="Bookflow Szerkesztői felület"
           FontSize="25" FontWeight="Bold"
           Foreground="Black"
           VerticalAlignment="Top"
           DockPanel.Dock="Left" RenderTransformOrigin="0.5,0.52" Margin="208,28,218,0" Height="43" />
        <Label Content="Könyv Címe:" 
               HorizontalAlignment="Left" 
               Height="29" Margin="125,125,0,0" 
               VerticalAlignment="Top" 
               Width="78"/>
        <Label Content="Könyv Szerzője:" 
               HorizontalAlignment="Left" 
               Height="37" 
               Margin="116,171,0,0" 
               VerticalAlignment="Top" 
               Width="96"/>
        <TextBox HorizontalAlignment="Left" 
                 Height="29" 
                 Margin="208,125,0,0" 
                 TextWrapping="Wrap" 
                 Text="" 
                 VerticalAlignment="Top" 
                 Width="357"/>
        <TextBox HorizontalAlignment="Left" 
                 Height="29" 
                 Margin="208,174,0,0" 
                 TextWrapping="Wrap" 
                 Text="" 
                 VerticalAlignment="Top" 
                 Width="357"/>
        <Label Content="Kibérelhető-e:" 
               HorizontalAlignment="Left" 
               Height="37" 
               Margin="117,223,0,0" 
               VerticalAlignment="Top" 
               Width="90"/>
        <ComboBox Name="comboBox_berles"
                  HorizontalAlignment="Left" 
                  Height="31" 
                  Margin="207,223,0,0"
                  VerticalAlignment="Top" 
                  Width="358"/>
        <Button Content="Szerkesztés" 
                Height="32" 
                Foreground="White" 
                Margin="125,300,208,68">
            <Button.Background>
                <SolidColorBrush Color="#2196F3"/>
            </Button.Background>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="8" 
                            Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
